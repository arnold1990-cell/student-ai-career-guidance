EDUTECH_APP_NAME=edutech-backend
EDUTECH_SERVER_PORT=8080

# Database
EDUTECH_DB_URL=jdbc:postgresql://localhost:5432/edutech
EDUTECH_DB_USERNAME=edutech_user
EDUTECH_DB_PASSWORD=change_me

# JWT (use a 32+ character secret)
EDUTECH_JWT_SECRET=replace-with-a-very-secure-32-char-min-secret
EDUTECH_JWT_ACCESS_EXPIRATION_MS=900000
EDUTECH_JWT_REFRESH_EXPIRATION_MS=604800000

# CORS
EDUTECH_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Mail
EDUTECH_MAIL_HOST=localhost
EDUTECH_MAIL_PORT=1025
EDUTECH_MAIL_USERNAME=
EDUTECH_MAIL_PASSWORD=
EDUTECH_MAIL_SMTP_AUTH=false
EDUTECH_MAIL_SMTP_STARTTLS=false

# SMS placeholders
EDUTECH_SMS_PROVIDER=mock
EDUTECH_SMS_API_URL=https://sms-provider.example.com
EDUTECH_SMS_API_KEY=replace_me

# Payment placeholders
EDUTECH_PAYMENT_PROVIDER=mock
EDUTECH_PAYMENT_API_URL=https://payment-provider.example.com
EDUTECH_PAYMENT_API_KEY=replace_me
